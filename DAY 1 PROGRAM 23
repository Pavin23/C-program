PLACING THE FLAG POST

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int x,y,l,c1,c2;
    scanf("%d %d %d",&x,&y,&l);
    c1=x+l/2.0;
    c2=y+l/2.0;
    printf("x-coordinate:%d\n",x);
    printf("y-coordinate:%d\n",y);
    printf("Length:%d\n",l);
    printf("Centre of the ground is at (%d,%d)",c1,c2);
    return 0;
}
