Factorial Number

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n,fact=1;
    scanf("%d\n",&n);
    if(n<0){
        printf("Invalid Input\n");
       return 0;
       }
    for(int i=1;i<=n;i++)
    {
    fact=fact*i;
        
    }
    printf("The Factorial of %d is %d\n",n,fact);
    return 0;
}
