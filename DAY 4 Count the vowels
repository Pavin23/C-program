
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

   char a[100],count=0;
    scanf("%[^\n]",&a);
int len =strlen(a);
    for(int i=0;i<len;i++){
    
        if((a[i]=='a'||a[i]=='A')||(a[i]=='e'||a[i]=='E')||(a[i]=='i'||a[i]=='I')||(a[i]=='o'||a[i]=='O')||                     (a[i]=='u'||a[i]=='U'))
        {
           count=count+1;
        }
    }
  printf("%d",count);
    return 0;
}
