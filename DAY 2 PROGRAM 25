Perfect or Not


#include <stdio.h>

int main() {
    int n, sum = 0;
    scanf("%d", &n);

    if (n < 0) {
        printf("Invalid Input");
        return 0;
    }

    for (int i = 1; i < n; i++) {
        if (n % i == 0)
            sum += i;
    }

    if (sum == n)
        printf("The Number %.1f is a Perfect Number.", (float)n);
    else
        printf("The Number %.1f is a Not Perfect Number.", (float)n);

    return 0;
}
